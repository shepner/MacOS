#!/bin/sh

WORKDIR=$HOME/local/DeDRM
DOWNLOADS=$WORKDIR/downloads
mkdir -p $WORKDIR

URL=https://github.com/apprenticeharper/DeDRM_tools/releases/latest  # this points to the most current release
FILE=`curl -L -s $URL | grep releases/download | cut -d '"' -f 2`    # this extracts out the path (not url) for the compiled ver
wget -N -P $DOWNLOADS https://github.com/$FILE

unzip $DOWNLOADS/`basename $FILE`-d $WORKDIR

rm -Rf $HOME/Applications/DeDRM.app
#ln -s $WORKDIR/DeDRM_tools_6.6.1/DeDRM_Macintosh_Application/DeDRM.app $HOME/Applications/DeDRM.app
